<div class="check-list-definition jumbotron">
  <strong><%= link_to check_list_definition.name, check_list_definition %></strong>
  <% unless check_list_definition.description.blank? %>
    <br /><%= check_list_definition.description %>
  <% end %>
  <p>
    <%= link_to 'Edit',
      edit_check_list_definition_path(check_list_definition),
      class: "btn"
    %> |
    <%= link_to 'Destroy',
      check_list_definition, method: :delete, data: { confirm: 'Are you sure?' },
      class: "btn"
    %>
  </p>
</div>
