<%= form_for(@check_list) do |f| %>
<% if @check_list.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@check_list.errors.count, "error") %> prohibited this check_list from being saved:</h2>
  <ul>
    <% @check_list.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <%= @check_list.description %>
</div>

<div>
  <div class="taskInputs">
    <ul class="list-unstyled">
      <%= f.fields_for :tasks do |task| %>
        <li>
          <%= render :partial => "task_fields", :locals => { :f => task } %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<div class="actions">
  <%= f.submit "Finish later...", class: "btn btn-default" %>
  <!--  link_to 'Done', done_check_list_path, class: "btn btn-primary"  -->
</div>
<% end %>
